# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           jp.gr.java_conf.hangedman.controllers.Application.index
GET     /swiki                      jp.gr.java_conf.hangedman.controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /data/*file                 controllers.Assets.at(path="/public/data", file)
GET     /stylesheets/*file          controllers.Assets.at(path="/public/stylesheets", file)
GET     /theme/*file                controllers.Assets.at(path="/public/theme", file)
GET     /tmpl/*file                 controllers.Assets.at(path="/public/tmpl", file)